package fib.as.game2048;

import java.util.ArrayList;

public class EstrategiaMitja extends IEstrategiaRanking{
	
	public ArrayList <Object> getRanking(ArrayList<Jugador> jugadors)
	{
		Integer i = 0;
		ArrayList<TuplePersPunt> ranking = new ArrayList<TuplePersPunt>();
		while(i<jugadors.size())
		{
			TuplePersPunt tupla = new TuplePersPunt();
			tupla.setPunt(jugadors.get(i).getPuntuacioMitjana());
			tupla.setNom(jugadors.get(i).getNom());
			ranking.add(tupla);
			++i;
		}
		return ranking;
	}
}
