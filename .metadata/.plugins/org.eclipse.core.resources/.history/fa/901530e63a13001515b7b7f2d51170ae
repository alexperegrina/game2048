		if(SP.size()==0) throw new ExcepcioNoHiHaPartida();
		CtrlJugador CJ = CDF.getCtrlJugador();
		ArrayList<Jugador> SJ = CJ.getAllJugador();
		//falta
	}
	
	public ArrayList getRanking(ArrayList<Jugador>jugadors)
	{
		ArrayList<tupletype>ranking = getRanking(jugadors);
		return ranking;
		
	}
	
}
